@model List<Product>

@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<div id="carouselExampleCaptions" style="background-color: #08618d; height: 58vh;" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active mt-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="carousel-caption text-start">
                            <h1>Discover the Future of Tech.</h1>
                            <p class="opacity-75">Explore cutting-edge gadgets and devices that transform your lifestyle.</p>
                            <p><a class="btn btn-lg btn-warning" asp-area="" asp-controller="Account" asp-action="Register">Sign up today</a></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="/brand_images/Hero2.png" class="img-fluid" style="height: 45vh; object-fit: cover;" alt="hero" />
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item mt-5">
            <div class="d-flex justify-content-center">
                <img src="/brand_images/Busket.png" class="img-fluid" style="height: 50vh; object-fit: cover;" alt="hero" />
            </div>
            <div class="container">
                <div class="carousel-caption">
                    <h1>Your One-Stop Shop for Electronics.</h1>
                    <p>From smartphones to smart office, we have it all.</p>
                    <p><a class="btn btn-lg btn-primary" href="#">Learn more</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item mt-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="/brand_images/Hero.png" class="img-fluid ms-5" style="height: 50vh; object-fit: cover;" alt="hero" />
                    </div>
                    <div class="col-md-6">
                        <div class="carousel-caption text-end">
                            <h1>Exclusive Deals Await You.</h1>
                            <p>Upgrade your tech game with our special offers and discounts.</p>
                            <p><a class="btn btn-lg btn-primary" asp-area="" asp-controller="Store" asp-action="Index">Browse gallery</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>



<div class="bg-light">
    <div class="container py-4">
        <h2 class="pb-4 text-center">Newest Products</h2>

        <div class="row mb-5 g-3">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="rounded border shadow p-3 text-center h-100">
                        <img src="/products/@product.ImageFile" class="img-fluid" alt="..."
                             style="height: 180px; object-fit: contain" />
                        <hr />
                        <h5 class="py-2">@product.Name</h5>
                        <p>
                            Brand: @product.Brand, Category: @product.Category
                        </p>
                        <h4 class="mb-3">R @(product.Price)</h4>
                        <a class="btn btn-primary btn-sm mb-2" asp-controller="Store"
                           asp-action="Details" asp-route-id="@product.Id" role="button">Details</a>
                        <button type="button" class="btn btn-warning btn-sm mb-2" onclick="addToCart(this, @product.Id)">
                            Add to Cart <i class="bi bi-cart4"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<br />

<div class="container">
    <h2 class="text-center my-5">Frequently Asked Questions</h2>

    <div class="accordion accordion-flush" id="accordionFlushExample">
        <!-- Question 1: Delivery Process -->
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    How does the delivery process work?
                </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">Once your order is confirmed, we will process it and ship it within 1-2 business days. You will receive a tracking number to monitor your delivery. Our estimated delivery time is between 3-7 business days, depending on your location.</div>
            </div>
        </div>

        <!-- Question 2: Payment Methods -->
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                    What payment methods are available?
                </button>
            </h2>
            <div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">We accept various payment methods including PayPal, credit/debit cards, and cash on delivery (COD) for select locations. Please note that COD is available only for orders under a certain amount.</div>
            </div>
        </div>

        <!-- Question 3: Product Return Process -->
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                    How do I return a product?
                </button>
            </h2>
            <div id="flush-collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">If you're not satisfied with your purchase, you can return it within 30 days of delivery. Simply contact our customer support team for instructions. The item must be unused, in its original packaging, and accompanied by the receipt.</div>
            </div>
        </div>

        <!-- Question 4: Canceling an Order -->
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
                    What happens if I cancel my order?
                </button>
            </h2>
            <div id="flush-collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">If you cancel your order before it has been shipped, you will receive a full refund. If the order has already been shipped, you can refuse delivery, and once we receive the item back, we will process your refund minus any applicable shipping fees.</div>
            </div>
        </div>

        <!-- Question 5: Refund Timeline -->
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFive" aria-expanded="false" aria-controls="flush-collapseFive">
                    How long does it take to receive my refund?
                </button>
            </h2>
            <div id="flush-collapseFive" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">Refunds typically take 5-10 business days to process, depending on your payment method. PayPal refunds are usually faster, while refunds for credit/debit card payments may take a few extra days to appear in your account.</div>
            </div>
        </div>
    </div>

</div>

